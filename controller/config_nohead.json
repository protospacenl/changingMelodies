{
    "version": 1.0,
 
    "robot": {
        "controller": {
            "port": "/dev/cm_controller",
            "baudrate": 19200,
            "timeout": 1
        },
        
        "sensors": [
            { "name": "touch", "gpio": "GPIO6", "pull_up": true},
            { "name": "reset", "gpio": "GPIO13", "pull_up": true, "bounce_time": 1.0 },
            { "name": "sit",   "gpio": "GPIO19", "pull_up": false },
            { "name": "other", "gpio": "GPIO26", "pull_up": false }
        ]

    },

    "joints": [
        {   
            "name": "shoulder_rot",
            "type": "MX",
            "id": 1,
            "params": {
                "cw_angle_limit": 2048,
                "ccw_angle_limit": 1145,
		"holding_torque": 10,
		"PGain": 8 
            }
        },
        {
            "name": "shoulder_ud",
            "type": "MX",
            "id": 2,
            "params": {
                "ccw_angle_limit": 1000,
                "cw_angle_limit": 3050,
		"holding_torque": 60,
		"PGain": 16
            }
        },
        {   
            "name": "wrist",
            "type": "MX",
            "id": 3,
            "params": {
                "ccw_angle_limit": 2048,
                "cw_angle_limit": 3220,
		"holding_torque": 50,
		"PGain": 16
            }
        },
        {   
            "name": "neck_rot",
            "type": "AX",
            "id": 4,
            "params": {
                "cw_angle_limit": 190,
                "ccw_angle_limit": 788,
		"holding_torque": 1 
            }
	},
        {   
            "name": "neck_up",
            "type": "AX",
            "id": 5,
            "params": {
                "cw_angle_limit": 190,
                "ccw_angle_limit": 788,
		"holding_torque": 100 
            }
        }
 
    ]
}
