{
    "version": 1.0,
 
    "sensors": [
        { "name": "touch", "gpio": "GPIO3", "bias": "NO", "trigger": "LOW" },
        { "name": "reset", "gpio": "GPIO4", "bias": "UP", "trigger": "LOW" },
        { "name": "sit", "  gpio": "GPIO5", "bias": "UP", "trigger": "LOW" },
        { "name": "other", "gpio": "GPIO3", "bias": "UP", "trigger": "LOW" }
    ],

    "head": {
        "port": "/dev/ttyS0",
        "baudrate": 19200,
        "rts_gpio": "GPIO2",
        "rts_delay": 0.005,
        "timeout": 1
    },

    "robot": {
        "controller": {
            "port": "/dev/ttyUSB0",
            "baudrate": 19200,
            "timeout": 1
        }
    },

    "joints": [
        {   
            "name": "shoulder_rot",
            "type": "AX",
            "id": 1,
            "params": {
                "cw_angle_limit": 202,
                "ccw_angle_limit": 601,
                "torque_limit": 1.0
            }
        },
        {
            "name": "shoulder_ud",
            "type": "MX",
            "id": 2,
            "params": {
                "cw_angle_limit": 198,
                "ccw_angle_limit": 799,
                "torque_limit": 1.0
            }
        },
        {   
            "name": "wrist",
            "type": "AX",
            "id": 3,
            "params": {
                "cw_angle_limit": 190,
                "ccw_angle_limit": 788,
                "torque_limit": 1.0
            }
        }
    ],

    "positions": {
        "arm": {
            "rest": { "joints": [ { "name": "shoulder_rot", "pos": 123},
                                  { "name": "shoulder_ud",  "pos": 123},
                                  { "name": "wrist",        "pos": 123} ] },
            "up":   { "joints": [ { "name": "shoulder_rot", "pos": 123},
                                  { "name": "shoulder_ud",  "pos": 123},
                                  { "name": "wrist",        "pos": 123} ] }
        },
        "tool": {
            "center": { "x": 123, "y": 456 }
        }
    },

    "playlist": [
        { "target": "arm",  "cmd": "move",  "position": "rest",          "speed": 100 },
        { "target": "tool", "cmd": "move",  "position": "finger_center", "speed": 100 },
        { "target": "arm",  "cmd": "move",  "position": "up",            "speed": 300},
        { "target": "arm",  "cmd": "relax", "joint": "wrist" },
        { "target": "head", "cmd": "say",   "text": "hallo" },
        { "target": "arm",  "cmd": "relax", "joint": "all" }
    ]
}
