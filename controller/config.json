{
    "version": 1.0,
 
    
    "head": {
        "port": "/dev/ttyS0",
        "baudrate": 19200,
        "rts_gpio": "GPIO2",
        "rts_delay": 0.005,
        "timeout": 1
    },

    "robot": {
        "controller": {
            "port": "/dev/ttyUSB0",
            "baudrate": 19200,
            "timeout": 1
        },
        
        "sensors": [
            { "name": "touch", "gpio": "GPIO6" },
            { "name": "reset", "gpio": "GPIO13", "pull_up": true,   "bounce_time": 0.1 },
            { "name": "sit", "  gpio": "GPIO19", "pull_up": false,  "active_state": true },
            { "name": "other", "gpio": "GPIO26", "pull_up": false }
        ]

    },

    "joints": [
        {   
            "name": "shoulder_rot",
            "type": "AX",
            "id": 1,
            "params": {
                "cw_angle_limit": 202,
                "ccw_angle_limit": 601,
                "torque_limit": 1.0
            }
        },
        {
            "name": "shoulder_ud",
            "type": "MX",
            "id": 2,
            "params": {
                "cw_angle_limit": 198,
                "ccw_angle_limit": 799,
                "torque_limit": 1.0
            }
        },
        {   
            "name": "wrist",
            "type": "AX",
            "id": 3,
            "params": {
                "cw_angle_limit": 190,
                "ccw_angle_limit": 788,
                "torque_limit": 1.0
            }
        }
    ],

    "positions": {
        "arm": {
            "wrist_up": { "joints": [ { "name": "wrist",        "pos": 700} ] },
            "wrist_down": { "joints": [ { "name": "wrist",        "pos": 512} ] },
            "rest": { "joints": [ { "name": "shoulder_rot", "pos": 512},
                                  { "name": "shoulder_ud",  "pos": 512},
                                  { "name": "wrist",        "pos": 512} ] },
            "up":   { "joints": [ { "name": "shoulder_rot", "pos": 123},
                                  { "name": "shoulder_ud",  "pos": 123},
                                  { "name": "wrist",        "pos": 123} ] }
        },
        "tool": {
            "center": { "x": 123, "y": 456 }
        }
    },

    "playlist": [
        { "target": "arm",  "cmd": "move",   "position": "wrist_up", "speed": 300 },
        { "target": "_",    "cmd": "delay",  "seconds": 5 },
        { "target": "arm",  "cmd": "move",   "position": "wrist_down", "speed": 100 },
        { "target": "_",    "cmd": "delay",  "seconds": 5 },
        { "target": "arm",  "cmd": "relax",  "joint": "all" },
        { "target": "_",    "cmd": "delay",  "seconds": 5 },
        { "target": "arm",  "cmd": "move",   "position": "rest", "speed": 70 },
        { "target": "_",    "cmd": "delay",  "seconds": 2 },
        { "target": "arm",  "cmd": "relax",  "joint": "wrist" },
        { "target": "_tool","cmd": "move",   "position": "finger_center", "speed": 100 },
        { "target": "_arm", "cmd": "move",   "position": "up", "speed": 400 },
        { "target": "_",    "cmd": "delay",  "seconds": 5 },
        { "target": "arm",  "cmd": "move",   "position": "wrist_up", "speed": 800, "wait": 0.2 },
        { "target": "arm",  "cmd": "move",   "position": "wrist_down", "speed": 800 , "wait": 0.2},
        { "target": "arm",  "cmd": "move",   "position": "wrist_up", "speed": 800 , "wait": 0.2},
        { "target": "arm",  "cmd": "move",   "position": "wrist_down", "speed": 800 , "wait": 0.2},
        { "target": "_head","cmd": "say",    "text": "hallo" },
        { "target": "arm",  "cmd": "relax",  "joint": "all" }
    ]
}
