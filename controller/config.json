{
    "version": 1.0,
    
    "robot": {
        "controller": {
            "port": "/dev/ttyUSB0",
            "baudrate": 19200,
            "timeout": 1
        },

        "head": {
            "port": "/dev/ttyS0",
            "baudrate": 19200,
            "rts_gpio": "GPIO2",
            "rts_delay": 0.005,
            "timeout": 1
        },

        "sensors": [
            { "name": "touch", "gpio": "GPIO3", "bias": "NO", "trigger": "LOW" },
            { "name": "reset", "gpio": "GPIO4", "bias": "UP", "trigger": "LOW" },
            { "name": "sit", "  gpio": "GPIO5", "bias": "UP", "trigger": "LOW" },
            { "name": "other", "gpio": "GPIO3", "bias": "UP", "trigger": "LOW" }
        ],

        "joints": [
            {
                "name": "shoulder",
                "type": "AX",
                "servo_id": 1,
                "cw_angle_limit": 202,
                "ccw_angle_limit": 601,
                "torque_limit": 1.0
            },{
                "type": "MX",
                "name": "elbow",
                "servo_id": 2,
                "cw_angle_limit": 198,
                "ccw_angle_limit": 799,
                "torque_limit": 1.0
            },{
                "type": "AX",
                "name": "wrist",
                "servo_id": 3,
                "cw_angle_limit": 190,
                "ccw_angle_limit": 788,
                "torque_limit": 1.0
            }
        ]
    }
}
